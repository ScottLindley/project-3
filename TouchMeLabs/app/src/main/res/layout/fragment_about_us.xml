<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.scottlindley.touchmelabs.DetailView.AboutUsFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/about_us_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:textStyle="bold"
                android:textSize="40dp"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="18dp"/>


            <ImageView
                android:id="@+id/jay_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="18dp"
                android:background="#33b5e5"
                android:layout_below="@id/about_us_header"/>

            <TextView
                android:id="@+id/jay_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Jay"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_toRightOf="@id/jay_image"
                android:layout_below="@id/about_us_header"/>

            <TextView
                android:id="@+id/jay_summary"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:text="filler text until an adequate profile blurb can be created. This is where we'll say a little bit about ourselves."
                android:layout_below="@id/jay_text"
                android:layout_marginLeft="135dp"/>

            <ImageView
                android:id="@+id/jon_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="18dp"
                android:background="#33b5e5"
                android:layout_below="@id/jay_image"/>

            <TextView
                android:id="@+id/jon_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Jon"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_toRightOf="@id/jon_image"
                android:layout_below="@id/jay_image"/>

            <TextView
                android:id="@+id/jon_summary"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:text="filler text until an adequate profile blurb can be created. This is where we'll say a little bit about ourselves."
                android:layout_below="@id/jon_text"
                android:layout_marginLeft="135dp"/>

            <ImageView
                android:id="@+id/scott_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="18dp"
                android:background="@drawable/scott_photo"
                android:layout_below="@id/jon_image"/>

            <TextView
                android:id="@+id/scott_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Scott"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_toRightOf="@id/jay_image"
                android:layout_below="@id/jon_image"/>

            <TextView
                android:id="@+id/scott_summary"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:text=""
                android:layout_below="@id/scott_text"
                android:layout_marginLeft="135dp"/>

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
