<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/twitter_card_dark_bg"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/card_background_dark">

        <ImageView
            android:id="@+id/twitter_profile_picture"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/twitter_username_dark"
            android:layout_gravity="left|center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="@string/twitter_username"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:layout_toRightOf="@id/twitter_profile_picture"/>

        <TextView
            android:id="@+id/twitter_handle_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/twitter_profile_picture"
            android:layout_below="@id/twitter_username_dark"
            android:text="@string/twitter_handle"
            android:textColor="@color/colorAccent"
            android:textSize="14dp"
            android:layout_margin="2dp"/>

        <TextView
            android:id="@+id/twitter_time_stamp_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/twitter_time_stamp"
            android:textColor="#757575"
            android:layout_alignParentRight="true"
            android:layout_margin="4dp" />
        <TextView
            android:id="@+id/twitter_tweet_content_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/tweet_content"
            android:textColor="#757575"
            android:textSize="14dp"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</FrameLayout>