<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.scottlindley.Bundle.SplashScreen.SplashScreen"
    android:background="#181818">


    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/working_copy2"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/app_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bundle"
        android:textSize="30dp"
        android:layout_marginTop="8dp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/app_logo"/>

    <TextView
        android:id="@+id/app_slogan_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="weather, news, tweets...you're welcome"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/app_name_text"
        android:textColor="#ffffff"/>

</RelativeLayout>